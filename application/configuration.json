{
    "base_url": "http://localhost/enolaphp/",
    "index_page": "",
    "environment": "development",
    "calculate_performance": "TRUE",
    "configuration": "configuration/",
    "charset": "UTF-8",
      
    "controllers": {
        "index": {"class": "Index", "url": "/"}
    },

    "filters": {
        "authorization": {"class": "Authorization", "filtered": "/*"}
    },
            
    "filters_after_processing": {
    },
            
    "i18n": {
        "default": "es",
        "locales": "en,fr,me"
    },
       
    "url-components": "enola-components",
    "components":{
    },
                
    "libraries": {
        "cache":{"path": "Cache"},
        "database":{"path": "DataBase/DataBaseAR"},
        "validation": {"path": "Validation"}
    },
    
    "composer": {
    },
    
    "dependency_injection":{
        "cache":{"class": "Cache", "namespace":"Enola\\Cache", "load_in": "controller",
            "constructor":{
                "store":{"value": "File", "type": "string"}
            },
            "properties":{
                "prefix":{"ref": "validation"}
            }
        },
        "validation":{"class": "Validation", "namespace": "Enola\\Lib", "load_in": "controller",
            "constructor":{
                "store":{"value": "es", "type": "string"}
            },
            "properties":{
                "locale":{"ref": "cache"}
            }
        }
    },
    
    "database": {
        "configuration": "database.json"
    }
}